<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data class=".MusicList">

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_back"
            android:layout_width="match_parent"
            android:layout_height="70px"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="67px"
                android:src="@drawable/icon_folder" />

            <TextView
                android:id="@+id/tv_back_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="50px"
                android:gravity="center_vertical"
                android:text="@string/all_music"
                android:textColor="@android:color/white"
                android:textSize="32px" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ListView
                android:id="@+id/music_list_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fastScrollAlwaysVisible="true"
                android:paddingRight="21px"
                android:scrollbarStyle="insideInset"
                android:listSelector="@drawable/selector_common_item_bg"/>
            <ListView
                android:id="@+id/music_folder_list_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fastScrollAlwaysVisible="true"
                android:paddingRight="21px"
                android:scrollbarStyle="insideInset"
                android:listSelector="@drawable/selector_common_item_bg"/>
        </FrameLayout>

    </LinearLayout>

</layout>

