<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data class="ItemMusiclistAllSongsBinding">

    </data>

    <LinearLayout
        android:id="@+id/ll_song_item"
        android:layout_width="match_parent"
        android:layout_height="70px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_music_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="67px"
            android:src="@drawable/icon_music_ok" />

        <TextView
            android:id="@+id/tv_file_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="50px"
            android:ellipsize="end"
            android:lines="1"
            android:textSize="32px"
            android:textColor="@android:color/white"/>

        <ImageView
            android:id="@+id/iv_playing_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="90px"
            android:src="@drawable/icon_music_playing"
            android:visibility="gone"/>

    </LinearLayout>

</layout>
